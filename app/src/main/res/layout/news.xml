<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/textView"
        android:text=""
        android:lines = "5"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:id="@+id/imageView"
        android:src="@drawable/china"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:scaleType="fitCenter"
        android:layout_toRightOf="@+id/textView"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/imageShare"
        />
    <TextView
        android:id="@+id/textLike"
        android:text="456"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView"
        />
    <ImageButton
        android:id="@+id/imagelike"
        android:src="@drawable/like"
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/textLike"
        android:layout_below="@+id/textView"
        />
    <TextView
        android:id="@+id/textComment"
        android:text="0"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/imagelike"
        />
    <ImageButton
        android:id="@+id/imageComment"
        android:src="@drawable/comment"
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/textComment"
        android:layout_below="@+id/textView"
        />
    <ImageButton
        android:id="@+id/imageShare"
        android:src="@drawable/share"
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/imageComment"
        android:layout_below="@+id/textView"
        />
</RelativeLayout>