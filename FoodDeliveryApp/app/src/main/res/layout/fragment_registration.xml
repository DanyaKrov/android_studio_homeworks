<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_background"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".activity.fragment.RegistrationFragment">

    <com.example.fooddeliveryapp.activity.view.InputField
        android:id="@+id/input_email"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        app:title="Email address"
        />
    <com.example.fooddeliveryapp.activity.view.InputField
        android:id="@+id/input_first_password"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        app:title="Made a password"
        />
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <com.example.fooddeliveryapp.activity.view.ActionButton
        android:id="@+id/buttonRegister"
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:text="@string/register"
        android:layout_gravity="center"/>

</LinearLayout>